<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="8dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="false"
                android:src="@drawable/ic_shopping_cart_black_48dp"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_id_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="CODIGO"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/lst_cliente"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="CLIENTE" />
                <TextView
                    android:id="@+id/lst_total"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="COBRO" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/lst_fecha"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        tools:text="FECHA" />
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:src="@drawable/uno2"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:scaleType="center"/>
                </TableRow>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"

            android:background="@color/INN_DARK_NARANJA">
            <TextView
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text=""
                android:id="@+id/txt_id_cliente" />
            <TextView
                android:id="@+id/txt_id_estado"
                android:gravity="end"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="" />
            <TextView
                android:id="@+id/txt_ajuste"
                android:gravity="end"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:paddingEnd="8dp"
                android:text="AJUSTES" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="OPCIONES"/>
        </TableRow>
    </TableLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>