<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_cliente2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.guma.desarrollo.gmv.Activity.NewClienteActivity"
    tools:showIn="@layout/activity__new__cliente">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:stretchColumns="1">

            <TableRow android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_add_person"
                    android:tint="@color/INN_LIGHT_NARANJA" />

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_height="fill_parent"
                    android:hint="NOMBRE"
                    android:padding="3dip"
                    android:text=""
                    android:textAlignment="textStart" />
            </TableRow>

            <TableRow android:layout_marginTop="14dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_dial_pad"
                    android:tint="@color/INN_LIGHT_NARANJA" />

                <EditText
                    android:id="@+id/txtRuc"
                    android:layout_height="fill_parent"
                    android:textAlignment="textStart"
                    android:hint="RUC"
                    android:padding="3dip"
                    android:text=""/>
            </TableRow>

            <TableRow android:layout_marginTop="34dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_directions"
                    android:tint="@color/INN_LIGHT_NARANJA" />

                <Spinner
                    android:id="@+id/txtDepartamento"
                    android:background="@drawable/border"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_place"
                    android:tint="@color/INN_LIGHT_NARANJA" />

                <EditText
                    android:id="@+id/txtMunicipio"
                    android:layout_height="fill_parent"
                    android:hint="MUNICIPIO"
                    android:padding="3dip"
                    android:text=""
                    android:textAlignment="textStart" />
            </TableRow>

            <TableRow android:layout_marginTop="14dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_call"
                    android:tint="@color/INN_LIGHT_NARANJA" />

                <EditText
                    android:id="@+id/txtTelefono"
                    android:layout_height="fill_parent"
                    android:textAlignment="textStart"
                    android:hint="TELEFONO"
                    android:inputType="phone"
                    android:padding="3dip"
                    android:text="" />
            </TableRow>
            <TableRow android:layout_marginTop="14dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_email"
                    android:tint="@color/INN_LIGHT_NARANJA" />

                <EditText
                    android:id="@+id/txtCorreo"
                    android:layout_height="fill_parent"
                    android:textAlignment="textStart"
                    android:hint="CORREO"
                    android:padding="3dip"
                    android:text=""
                    android:inputType="textEmailAddress" />
            </TableRow>
            <TableRow android:layout_marginTop="0dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_location_found"
                    android:tint="@color/INN_LIGHT_NARANJA" />

                <EditText
                    android:id="@+id/txtDireccion"
                    android:textAlignment="textStart"
                    android:hint="DIRECCION"
                    android:lines="6"
                    android:maxLines="6"
                    android:padding="0dp"
                    android:text=""
                     />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
